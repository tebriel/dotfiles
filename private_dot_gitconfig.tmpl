[user]
	email = 821688+tebriel@users.noreply.github.com
	name = Chris Moultrie
{{- if .WorkComputer }}
	signingkey = {{ onepasswordRead "op://Github/Github/public key" }}
{{- else }}
	signingkey = {{ onepasswordRead "op://Personal/Personal SSH Key/public key" }}
{{- end }}

[gpg]
	format = ssh

{{- if ne .OpSSHSignPath "" }}
[gpg "ssh"]
	program = {{ .OpSSHSignPath }}
{{- end }}

[commit]
	gpgsign = true

[init]
	defaultBranch = main

[credential "https://github.com"]
	helper = !{{ .GhPath }} auth git-credential

[credential "https://gist.github.com"]
	helper = !{{ .GhPath }} auth git-credential
