# vim: set filetype=muttrc
# -*- muttrc -*-
#
# Configure header displays.
#
# $Id: headers 6 2007-03-02 17:36:39Z vdanen $

# Ignore all headers
ignore *

# Then un-ignore the ones I want to see
unignore From:
unignore To:
unignore Reply-To:
unignore Mail-Followup-To:
unignore Subject:
unignore Date:
unignore Organization:
unignore Newsgroups:
unignore CC:
unignore BCC:
unignore Message-ID:
unignore User-Agent:
unignore X-Spam-Status::
unignore Content-Type:
unignore X-

set edit_headers                          # I want to edit the message headers.

# Now order the visable header lines
hdr_order Date: From: To: CC: BCC: Reply-To: Mail-Followup-To: Subject: Organization: User-Agent:

my_hdr X-Hipster: mutt
my_hdr X-Notify-Me: tell me if you read my headers
