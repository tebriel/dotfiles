#kill startup message
startup_message off

defscrollback 1024
hardstatus on
hardstatus alwayslastline

term screen-256color

hardstatus string '%{= kg}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}]%{=b B}%1`%{=b C}[ %d %M %c ]%{W}'

screen -t REDIS 0 bash -c 'redis-server /usr/local/etc/redis.conf'
chdir $HOME/Git/velocity
screen -t Django 1 bash -c '. bin/activate && ./manage.py runserver 9000'
chdir $HOME/Git/velocity/java/velocity-core
screen -t Velocity 2 bash -c 'mvn exec:java -Dexec.mainClass="us.egs.velocity.util.MiniVelocity" -Dexec.classpathScope=test -Dexec.args="conf/mini-velocity.properties ../../data/sanitized.json.gz"'
chdir $HOME/Downloads/edgescape
screen -t Edgescape 3 bash -c './sbin/runFacilitator.sh'
# Use the line below if you are using the submodule
# chdir $HOME/Git/velocity/node
chdir $HOME/Git/velocity/deliverator
screen -t Deliverator 4 bash -c 'npm start'
